{
    "name": "Free AWS Cloud Bootcamp Development Environment",
    "build": {        
      "dockerfile": "Dockerfile"
    },    

    "forwardPorts": [3000, 4567, 2000],

    "customizations": {      
      "vscode": {        
        "extensions": [
            "42Crunch.vscode-openapi",
            "ms-azuretools.vscode-docker",
            "ms-python.python",                                
            "hashicorp.terraform",
            "redhat.ansible",
            "redhat.vscode-yaml",
            "amazonwebservices.aws-toolkit-vscode"
        ]
      }
    },  
  "containerEnv": {
    "AWS_ACCESS_KEY_ID":      "${localEnv:AWS_ACCESS_KEY_ID}",
    "AWS_ACCOUNT_ID":         "${localEnv:AWS_ACCOUNT_ID}",
    "AWS_DEFAULT_REGION":     "${localEnv:AWS_DEFAULT_REGION}",
    "AWS_SECRET_ACCESS_KEY":  "${localEnv:AWS_SECRET_ACCESS_KEY}",
    "DOCKER_USERNAME":        "${localEnv:DOCKER_USERNAME}",
    "DOCKER_PASSWORD":        "${localEnv:DOCKER_PASSWORD}",
    "HONEYCOMB_API_KEY":      "${localEnv:HONEYCOMB_API_KEY}",
    "ROLLBAR_ACCESS_TOKEN":   "${localEnv:ROLLBAR_ACCESS_TOKEN"
    },
    
    "remoteUser": "bootcamp",    
    "remoteEnv": {
        "PATH": "${containerEnv:PATH}:/home/bootcamp"
    },

    "postAttachCommand": {
      "npminstall": "npm install --prefix /home/bootcamp/frontend-react-js",
      "pipinstall": "pip3 install -r /home/bootcamp/backend-flask/requirements.txt"
    }
}